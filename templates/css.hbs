@font-face {
    font-family: "{{ name }}";
    src: {{{ fontSrc }}};
}

.{{prefix}}::before,
[class^="{{prefix}}-"]::before,
[class*=" {{prefix}}-"]::before {
    -moz-osx-font-smoothing: grayscale;
    -webkit-font-smoothing: antialiased;
    display: inline-block;
    font-family: {{ name }} !important;
    font-style: normal;
    font-variant: normal;
    font-weight: normal !important;
    line-height: 1;
    text-rendering: auto;
}

{{# each codepoints }}
.{{ ../prefix }}-{{ @key }}::before {
    content: "\\{{ codepoint this }}";
}
{{/ each }}